pipeline{
    agent any

    environment{
        USER_NAME = "Joe"
        USER_ID = 42
    }
    stages{
        stage("Using env vars"){
            steps{
                Echo "BUILD_NUMBER = ${env.BUILD_NUMBER}"
                sh 'echo BUILD_NUMBER = $BUILD_NUMBER'
                echo "Current user is ${env.USER_NAME}"
            }
        }
    }
}
